<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

   <LinearLayout
       android:id="@+id/l1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <RadioButton
           android:id="@+id/ch1"
           android:layout_marginLeft="5dp"
           android:layout_marginTop="20dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <RelativeLayout
           android:layout_marginTop="10dp"
           android:layout_width="match_parent"
           android:layout_marginLeft="5dp"
           android:layout_marginRight="10dp"
           android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/im"
               android:layout_width="50dp"
               android:layout_height="60dp"
               android:src="@drawable/rec_icon_list" />

           <TextView
               android:id="@+id/tvProd"
               android:layout_width="160dp"
               android:layout_height="wrap_content"
               android:layout_marginStart="10dp"
               android:layout_marginTop="10dp"
               android:layout_marginEnd="10dp"
               android:layout_marginBottom="10dp"
               android:layout_toRightOf="@+id/im"
               android:ellipsize="marquee"
               android:textSize="18dp" />
           <LinearLayout
               android:orientation="vertical"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:textSize="18dp"
                       android:layout_alignParentRight="true"
                       android:ellipsize="marquee"
                       android:layout_height="wrap_content"
                       android:id="@+id/tvData"
                       android:layout_margin="10dp" />
               </RelativeLayout>
               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:textSize="18dp"
                       android:layout_alignParentRight="true"
                       android:ellipsize="marquee"
                       android:layout_height="wrap_content"
                       android:id="@+id/tvValor"
                       android:layout_margin="10dp" />
               </RelativeLayout>
           </LinearLayout>
       </RelativeLayout>
   </LinearLayout>

    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_marginLeft="5dp"
            android:id="@+id/ch2"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/im2"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:src="@drawable/rec_icon_list" />

            <TextView
                android:id="@+id/tvProd2"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/im2"
                android:ellipsize="marquee"
                android:textSize="18dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="18dp"
                        android:layout_alignParentRight="true"
                        android:ellipsize="marquee"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvData2"
                        android:layout_margin="10dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="18dp"
                        android:layout_alignParentRight="true"
                        android:ellipsize="marquee"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvValor2"
                        android:layout_margin="10dp" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_marginLeft="5dp"
            android:id="@+id/ch3"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/im3"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:src="@drawable/rec_icon_list" />

            <TextView
                android:id="@+id/tvProd3"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/im3"
                android:ellipsize="marquee"
                android:textSize="18dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="18dp"
                        android:layout_alignParentRight="true"
                        android:ellipsize="marquee"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvData3"
                        android:layout_margin="10dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="18dp"
                        android:layout_alignParentRight="true"
                        android:ellipsize="marquee"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvValor3"
                        android:layout_margin="10dp" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_marginLeft="5dp"
            android:id="@+id/ch4"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/im4"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:src="@drawable/rec_icon_list" />

            <TextView
                android:id="@+id/tvProd4"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/im4"
                android:ellipsize="marquee"
                android:textSize="18dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="18dp"
                        android:layout_alignParentRight="true"
                        android:ellipsize="marquee"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvData4"
                        android:layout_margin="10dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="18dp"
                        android:layout_alignParentRight="true"
                        android:ellipsize="marquee"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvValor4"
                        android:layout_margin="10dp" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/canc"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_height="wrap_content"
            android:text="Cancelar"/>

        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/rec"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_height="wrap_content"
            android:text="Recuperar"/>

    </RelativeLayout>
</LinearLayout>
</ScrollView>