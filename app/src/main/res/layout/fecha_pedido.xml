			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:layout_marginTop="-10dp"
			android:id="@+id/lay2">

			<EditText
				android:layout_width="wrap_content"
				android:ems="5"
				android:layout_height="wrap_content"
				android:hint="Pagto..."
				android:id="@+id/pagto2"
