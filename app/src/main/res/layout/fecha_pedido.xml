				android:textColorHint="#FFFFFF"/>

			<EditText
				android:layout_width="wrap_content"
				android:ems="10"
				android:layout_height="wrap_content"
				android:hint="Troco..."
				android:id="@+id/troco2"
				android:inputType="numberDecimal"
				android:textColor="#FFFFFF"
